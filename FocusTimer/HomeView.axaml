<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FocusTimer.Avalonia"
             x:Class="FocusTimer.Avalonia.HomeView">
    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="10" Padding="20">
        <Grid RowDefinitions="Auto,*">
            <TextBlock Text="Home" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20" HorizontalAlignment="Left"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
                    <TextBlock Text="Select Duration" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Viewbox Stretch="Uniform" MaxHeight="400" Margin="0,0,0,20">
                        <local:CircularTimerControl Name="DurationPicker" Minutes="30" Width="300" Height="300"/>
                    </Viewbox>

                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                        <Button Name="PlayButton" Content="Start Focus" Click="PlayButton_Click" Classes="accent"/>
                        <Button Name="PauseButton" Content="⏸" Click="PauseButton_Click" IsVisible="False"/>
                        <Button Name="RestartButton" Content="↻" Click="RestartButton_Click" IsVisible="False"/>
                        <Button Name="StopButton" Content="Stop" Click="StopButton_Click" IsVisible="False" Background="DarkRed"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
