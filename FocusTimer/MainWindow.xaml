<Window x:Class="FocusTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FF1E1E1E">

    <Grid>
        <!-- Container Panel -->
        <Border Background="#FF2D2D30"
                CornerRadius="15"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400"
                Height="300"
                BorderBrush="#FF3E3E42"
                BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Focus Timer"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Duration input -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBox x:Name="DurationInput"
                             Width="60"
                             FontSize="18"
                             Text="30"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text=" min"
                               FontSize="18"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PlayButton"
                            Content="▶ Play"
                            Width="80"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="PlayButton_Click"
                            Background="#FF3A86FF"
                            Foreground="White"
                            BorderThickness="0"
                            
                            Cursor="Hand"/>
                    <Button x:Name="StopButton"
                            Content="■ Stop"
                            Width="80"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="StopButton_Click"
                            Background="#FFDC3545"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                    <Button x:Name="PauseButton"
                            Content="⏸ Pause"
                            Width="80"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="PauseButton_Click"
                            Background="#FF6F42C1"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="Collapsed"/>
                    <Button x:Name="ResetButton"
                            Content="⟲ Reset"
                            Width="100"
                            Height="40"
                            FontSize="16"
                            Click="ResetButton_Click"
                            Background="#FF6C757D"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
