<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cp="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             x:Class="FocusTimer.Avalonia.SettingsView">
    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="10" Padding="20">
        <Grid RowDefinitions="Auto,*">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20" HorizontalAlignment="Left"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,10">
                    <WrapPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <TextBlock Text="Bg Color:" Width="85" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,10"/>
                            <Border Margin="0,0,0,10" Background="{DynamicResource InputBackgroundBrush}" CornerRadius="4" Padding="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <cp:ColorPicker Name="SettingsBackgroundPicker" Color="#40000000" Width="120" Height="32"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <TextBlock Text="Timer Color:" Width="85" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,10,10"/>
                            <Border Margin="0,0,0,10" Background="{DynamicResource InputBackgroundBrush}" CornerRadius="4" Padding="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <cp:ColorPicker Name="SettingsTimerColorPicker" Color="#AFFFFFFF" Width="120" Height="32"/>
                            </Border>
                        </StackPanel>
                    </WrapPanel>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Size:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="*,Auto" Margin="10,0,0,10">
                        <Slider Grid.Column="0" Name="SettingsTimerFontSizeInput" Minimum="20" Maximum="200" Value="100" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding #SettingsTimerFontSizeInput.Value, StringFormat={}{0:0}}" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}" Width="35" TextAlignment="Right"/>
                    </Grid>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Position:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Name="SettingsPositionCombo" HorizontalAlignment="Stretch" Margin="10,0,0,10" SelectedIndex="0">
                        <ComboBoxItem>Center</ComboBoxItem>
                        <ComboBoxItem>Top</ComboBoxItem>
                        <ComboBoxItem>Bottom</ComboBoxItem>
                        <ComboBoxItem>Left</ComboBoxItem>
                        <ComboBoxItem>Right</ComboBoxItem>
                        <ComboBoxItem>Top-Left</ComboBoxItem>
                        <ComboBoxItem>Top-Right</ComboBoxItem>
                        <ComboBoxItem>Bottom-Left</ComboBoxItem>
                        <ComboBoxItem>Bottom-Right</ComboBoxItem>
                    </ComboBox>
                </Grid>

                <Grid ColumnDefinitions="*,10,*,10,*" Margin="0,10,0,0">
                    <Button Grid.Column="0" Name="SettingsCancelButton" Content="Cancel" Click="SettingsCancelButton_Click" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    <Button Grid.Column="2" Name="SettingsResetButton" Content="Reset" Click="SettingsResetButton_Click" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#C62828" Foreground="White"/>
                    <Button Grid.Column="4" Name="SettingsApplyButton" Content="Apply" Click="SettingsApplyButton_Click" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#1565C0" Foreground="White" FontWeight="Bold"/>
                </Grid>
            </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
