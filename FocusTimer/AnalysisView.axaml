<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FocusTimer.Avalonia.AnalysisView">
    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="10" Padding="20">
        <Grid RowDefinitions="Auto,*">
            <TextBlock Text="Analysis" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,20" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Text="Stats and Charts coming soon..." FontSize="16" Foreground="{DynamicResource TextSecondaryBrush}" 
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
