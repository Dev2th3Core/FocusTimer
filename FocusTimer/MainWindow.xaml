<Window x:Class="FocusTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Timer"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FF1E1E1E">

    <Grid>
        <!-- Container Panel -->
        <Border Background="#FF2D2D30"
                CornerRadius="15"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400"
                Height="Auto"
                MinHeight="300"
                BorderBrush="#FF3E3E42"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <!-- Title -->
                    <TextBlock Text="Focus Timer"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Main content and settings share the same area; settings panel is collapsed by default -->
                <Grid Grid.Row="1">
                    <!-- Main controls -->
                    <StackPanel x:Name="MainControls" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Duration input -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBox x:Name="DurationInput"
                                     Width="60"
                                     FontSize="18"
                                     Text="30"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Text=" min"
                                       FontSize="18"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="PlayButton"
                                    Content="▶"
                                    Width="40"
                                    Height="40"
                                    FontSize="14"
                                    Margin="0,0,10,0"
                                    Click="PlayButton_Click"
                                    Background="#FF3A86FF"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="StopButton"
                                    Content="■"
                                    Width="40"
                                    Height="40"
                                    FontSize="14"
                                    Margin="0,0,10,0"
                                    Click="StopButton_Click"
                                    Background="#FFDC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Visibility="Collapsed"/>
                            <Button x:Name="PauseButton"
                                    Content="⏸"
                                    Width="40"
                                    Height="40"
                                    FontSize="14"
                                    Margin="0,0,10,0"
                                    Click="PauseButton_Click"
                                    Background="#FF6F42C1"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Visibility="Collapsed"/>
                            <Button x:Name="ResetButton"
                                    Content="⟲"
                                    Width="40"
                                    Height="40"
                                    FontSize="16"
                                    Click="ResetButton_Click"
                                    Background="#FF6C757D"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="SettingsButton"
                                    Content="⚙"
                                    Width="40"
                                    Height="40"
                                    FontSize="16"
                                    Margin="10,0,0,0"
                                    Click="SettingsButton_Click"
                                    Background="#FF4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Inline settings panel -->
                    <Border x:Name="SettingsPanel" Background="#FF1E1E1E" CornerRadius="8" Padding="12" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Background Color (hex)" Foreground="White"/>
                            <TextBox x:Name="SettingsBackgroundInput" Text="#A0000000"/>

                            <TextBlock Text="Timer Color (hex)" Margin="0,10,0,0" Foreground="White"/>
                            <TextBox x:Name="SettingsTimerColorInput" Text="#AFFFFFFF"/>

                            <TextBlock Text="Timer Font Size" Margin="0,10,0,0" Foreground="White"/>
                            <TextBox x:Name="SettingsTimerFontSizeInput" Text="100"/>

                            <TextBlock Text="Position" Margin="0,10,0,0" Foreground="White"/>
                            <ComboBox x:Name="SettingsPositionCombo" SelectedIndex="0">
                                <ComboBoxItem>Center</ComboBoxItem>
                                <ComboBoxItem>Top</ComboBoxItem>
                                <ComboBoxItem>Bottom</ComboBoxItem>
                                <ComboBoxItem>Left</ComboBoxItem>
                                <ComboBoxItem>Right</ComboBoxItem>
                                <ComboBoxItem>Top-Left</ComboBoxItem>
                                <ComboBoxItem>Top-Right</ComboBoxItem>
                                <ComboBoxItem>Bottom-Left</ComboBoxItem>
                                <ComboBoxItem>Bottom-Right</ComboBoxItem>
                            </ComboBox>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                <Button x:Name="SettingsApplyButton" Width="80" Margin="0,0,10,0" Click="SettingsApplyButton_Click">Apply</Button>
                                <Button x:Name="SettingsCancelButton" Width="80" Click="SettingsCancelButton_Click">Cancel</Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            </ScrollViewer>
         </Border>
     </Grid>
 </Window>
