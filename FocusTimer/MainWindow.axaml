<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FocusTimer.Avalonia.MainWindow"
        Title="FocusTimer"
        Icon="/Assets/icon.png"
        Width="600" Height="400"
        MinWidth="400" MinHeight="400"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Background="{x:Null}"
        TransparencyLevelHint="Transparent">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#F3F3F3"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="PaneBackgroundBrush" Color="#F3F3F3"/>
                    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#EAEAEA"/>
                    <SolidColorBrush x:Key="TextPrimaryBrush" Color="Black"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#606060"/>
                    <SolidColorBrush x:Key="NavForegroundBrush" Color="#505050"/>
                    <SolidColorBrush x:Key="NavHoverBrush" Color="#1F000000"/>
                    <SolidColorBrush x:Key="NavPressedBrush" Color="#3F000000"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="#F0202020"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#303030"/>
                    <SolidColorBrush x:Key="PaneBackgroundBrush" Color="#1f1f1f"/>
                    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#454545"/>
                    <SolidColorBrush x:Key="TextPrimaryBrush" Color="White"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#D0D0D0"/>
                    <SolidColorBrush x:Key="NavForegroundBrush" Color="#A0A0A0"/>
                    <SolidColorBrush x:Key="NavHoverBrush" Color="#1FFFFFFF"/>
                    <SolidColorBrush x:Key="NavPressedBrush" Color="#3FFFFFFF"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Styles>
        <!-- Navigation Button Style -->
        <Style Selector="Button.nav">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource NavForegroundBrush}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.nav:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource NavHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        <Style Selector="Button.nav:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource NavPressedBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Accent Button Style (Start) -->
        <Style Selector="Button.accent">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>
    
    <Border Name="MainContainer" CornerRadius="15" Background="{DynamicResource ContentBackgroundBrush}" Padding="15">
        <Grid RowDefinitions="Auto,*">
            <!-- Custom Title Bar -->
            <Grid Name="TitleBar" Height="30" ColumnDefinitions="Auto,*,Auto,Auto,Auto" Background="Transparent" PointerPressed="TitleBar_PointerPressed">
                <Button Name="HamburgerButton" Grid.Column="0" Click="HamburgerButton_Click" Background="Transparent" Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0" Margin="0,0,10,0" VerticalAlignment="Center">
                    <PathIcon Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" Width="14" Height="14"/>
                </Button>
                <TextBlock Grid.Column="1" Text="Focus Timer" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                <Button Name="Minimize" Content="-" Click="Minimize_Click" Grid.Column="2" Background="Transparent" Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                <Button Name="MaximizeRestore" Content="â–¡" Click="MaximizeRestore_Click" Grid.Column="3" Background="Transparent" Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                <Button Name="CloseButton" Content="X" Click="Close_Click" Grid.Column="4" Background="Transparent" Foreground="Red" BorderThickness="0"/>
            </Grid>

            <!-- Content Area -->
            <SplitView Grid.Row="1" Name="MainSplitView"
                       DisplayMode="CompactInline"
                       IsPaneOpen="False"
                       CompactPaneLength="48"
                       OpenPaneLength="200"
                       Background="Transparent"
                       PaneBackground="{DynamicResource PaneBackgroundBrush}"
                       Margin="0,10,0,0">
                
                <SplitView.Pane>
                    <StackPanel Spacing="5" Margin="5,10">
                        <!-- Nav Items -->
                        <Button Name="NavHome" Classes="nav" Click="Nav_Click" HorizontalAlignment="Stretch" ToolTip.Tip="Home">
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <PathIcon Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" Width="16" Height="16"/>
                                <TextBlock Text="Home" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Name="NavSettings" Classes="nav" Click="Nav_Click" HorizontalAlignment="Stretch" ToolTip.Tip="Settings">
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <PathIcon Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.35 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.35 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.04 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.04 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" Width="16" Height="16"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Name="NavAnalysis" Classes="nav" Click="Nav_Click" HorizontalAlignment="Stretch" ToolTip.Tip="Analysis">
                            <StackPanel Orientation="Horizontal" Spacing="15">
                                <PathIcon Data="M19,3H5C3.9,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z" Width="16" Height="16"/>
                                <TextBlock Text="Analysis" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </SplitView.Pane>

                <SplitView.Content>
                    <ContentControl Name="PageContent" Margin="10,0,0,0"/>
                </SplitView.Content>
            </SplitView>
        </Grid>
    </Border>
</Window>
